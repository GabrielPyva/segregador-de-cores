<launch>
  <!-- Caminho do arquivo .bag passado como argumento -->
  <arg name="bag_file" default="$(env HOME)/Downloads/rotating_detergent_1_6.bag" />

  <!-- Executa o rosbag com os remapeamentos para o namespace /stereo -->
  <node pkg="rosbag" type="play" name="rosbag_play" args="--loop $(arg bag_file)
    /narrow_stereo_textured/left/image_raw:=/stereo/left/image_raw
    /narrow_stereo_textured/right/image_raw:=/stereo/right/image_raw
    /narrow_stereo_textured/left/camera_info:=/stereo/left/camera_info
    /narrow_stereo_textured/right/camera_info:=/stereo/right/camera_info
  " />

  <!-- stereo_image_proc no namespace /stereo -->
  <group ns="stereo">
        <node pkg="stereo_image_proc" type="stereo_image_proc" name="stereo_image_proc" output="screen">
            <param name="approximate_sync" value="True"/>
            <param name="queue_size" value="30"/>

            <remap from="left/image_raw"  to="left/image_raw" />
            <remap from="right/image_raw" to="right/image_raw" />
            <remap from="left/camera_info"  to="left/camera_info" />
            <remap from="right/camera_info" to="right/camera_info" />
        </node>
    </group>

  <!-- Visualização opcional da imagem esquerda retificada -->
  <node pkg="image_view" type="stereo_view" name="stereo_view" output="screen">
        <param name="approximate_sync" value="true"/>
        <param name="queue_size" value="30"/>
        <remap from="stereo" to="/stereo"/>
        <remap from="image" to="image_rect_color"/>
    </node>

  <!-- Visualização opcional da disparidade -->
  <node pkg="image_view" type="image_view" name="image_view_disparity">
    <remap from="image" to="/stereo/disparity" />
  </node>
  <node name="configure" pkg="rqt_reconfigure" type="rqt_reconfigure"/>
</launch>
