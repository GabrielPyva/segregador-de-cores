<launch>
  <!-- Lançar a câmera esquerda -->
    <node name="left" pkg="usb_cam" type="usb_cam_node" output="screen">
      <param name="video_device" value="/dev/video2"/>
      <param name="image_width" value="640"/>
      <param name="image_height" value="480"/>
      <param name="pixel_format" value="mjpeg"/>
      <param name="io_method" value="mmap"/>
      <param name="camera_frame_id" value="left_camera"/>
      <param name="camera_info_url" value="file:///home/daniel/catkin_ws/src/calibracao/src/yaml/left.yaml"/>
    </node>

  <!-- Lançar a câmera direita -->
    <node name="right" pkg="usb_cam" type="usb_cam_node" output="screen">
      <param name="video_device" value="/dev/video0"/>
      <param name="image_width" value="640"/>
      <param name="image_height" value="480"/>
      <param name="pixel_format" value="mjpeg"/>
      <param name="io_method" value="mmap"/>
      <param name="camera_frame_id" value="right_camera"/>
      <param name="camera_info_url" value="file:///home/daniel/catkin_ws/src/calibracao/src/yaml/right.yaml"/>
    </node>
    <node name="prefeeding" pkg="prefeeding_processor" type="prefeeding.py" output="screen"/>
    <group ns="stereo">
        <node pkg="stereo_image_proc" type="stereo_image_proc" name="stereo_image_proc" output="screen">
            <param name="approximate_sync" value="True"/>
            <param name="queue_size" value="30"/>

            <remap from="left/image_raw"  to="left/image_preprocessed" />
            <remap from="right/image_raw" to="right/image_preprocessed" />
            <remap from="left/camera_info"  to="/left/camera_info" />
            <remap from="right/camera_info" to="/right/camera_info" />
        </node>
    </group>
  <node pkg="image_view" type="stereo_view" name="stereo_view" output="screen">
    <param name="approximate_sync" value="true"/>
    <param name="queue_size" value="30"/>
    <remap from="stereo" to="/stereo"/>
    <remap from="image" to="image_rect_color"/>
  </node>
  <node name="configure" pkg="rqt_reconfigure" type="rqt_reconfigure"/>
</launch>